    xmlns:tools="http://schemas.android.com/tools">

    <!--
    <uses-permission android:name="android.permission.USB_PERMISSION"/>
    -->
    <uses-feature android:name="android.hardware.usb.host" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.DentyLoad4H">

        <activity
            android:name=".Sub_bActivity"
            android:exported="false" />
        <activity
            android:name=".Pjtgo_bActivity"
            android:exported="false" />

        <activity
            android:name=".CupremActivity"
            android:exported="false" />

        <activity
            android:name=".PopupProblemActivity"
            android:exported="false" />

        <activity
            android:name=".PopupCupActivity"
            android:exported="false" />

        <activity
            android:name=".PopupDisinActivity"
            android:exported="false" />

        <activity
            android:name=".PopupMiddleActivity"
            android:exported="false" />

        <service
            android:name=".SerialService"
            android:enabled="true" />


        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>

            <meta-data
                android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"
                android:resource="@xml/device_filter" />
        </activity>
    </application>

</manifest>