<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/color_background"
    android:gravity="center"
    android:keepScreenOn="true"
    android:orientation="vertical"
    tools:context=".Pjtgo_bActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="컵 인 식"
            android:textSize="60dp"
            android:background="@drawable/grey_bar"
            android:fontFamily="@font/nanumsquare_acr"
            android:textColor="#101328">
        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:text="소 독 수"
            android:textSize="50dp"
            android:background="@drawable/grey_bar"
            android:fontFamily="@font/nanumsquare_acr"
            android:textColor="#101328">
        </Button>
        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:text="소 독 액"
            android:textSize="50dp"
            android:background="@drawable/grey_bar"
            android:fontFamily="@font/nanumsquare_acr"
            android:textColor="#101328">
        </Button>

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:text="치솔 살균"
            android:textSize="50dp"
            android:background="@drawable/grey_bar"
            android:fontFamily="@font/nanumsquare_acr"
            android:textColor="#101328">
        </Button>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <Button
            android:id="@+id/dayButton1"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:text="0"
            android:textSize="80dp"
            android:background="@drawable/whitebutton"
            android:fontFamily="@font/nanumsquare_acr"
            android:textColor="#101328">
        </Button>

        <ImageView
            android:id="@+id/dayButton2"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:src="@drawable/goodb">
        </ImageView>

        <ImageView
            android:id="@+id/weekButton"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/midb">
        </ImageView>

        <ImageView
            android:id="@+id/monthButton"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:src="@drawable/uvprog">
        </ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nanum_gothic_bold"
            android:layout_margin="40dp"
            android:gravity="center_horizontal"
            android:text="@string/A_in_Case_Msg"
            android:textColor="@color/colorBlackText"
            android:textSize="70sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/none"
        android:gravity="center"
        android:visibility="visible"
        tools:visibility="visible">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <LinearLayout
                android:id="@+id/dowash"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/navy_button"
                android:gravity="center"
                android:orientation="vertical">

            </LinearLayout>

            <TextView
                android:id="@+id/textViewStart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:fontFamily="@font/nanum_gothic_bold"
                android:singleLine="true"
                android:text="@string/START"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="100sp"
                android:textStyle="bold"
                android:typeface="normal" />

        </FrameLayout>

    </LinearLayout>

</LinearLayout>