<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0093FF"
    android:visibility="visible"
    tools:context=".WashActivityV2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">

                <LinearLayout
                    android:id="@+id/backbutton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="20dp"
                        android:src="@drawable/leftarrow">

                    </ImageView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="이전"
                        android:textColor="#000000"
                        android:textSize="70dp"></TextView>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="60dp"
                        android:layout_marginBottom="60dp"
                        android:fontFamily="@font/nanum_gothic_bold"
                        android:gravity="center"
                        android:text="컵을놓은후 문을 닫아 주세요"
                        android:textColor="#000000"
                        android:textSize="120sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|top"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:keepScreenOn="true"
                    android:orientation="vertical"
                    android:visibility="visible"

                    >

                    <!--                <ImageView-->

                    <!--                    android:layout_width="800dp"-->
                    <!--                    android:layout_height="500dp"-->
                    <!--                    android:src="@drawable/nfcandcase2"-->

                    <!--                    >-->

                    <!--                </ImageView>-->

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        tools:visibility="visible">

                        <ImageView
                            android:id="@+id/nfc_gif"
                            android:layout_width="1100dp"
                            android:layout_height="530dp"
                            android:scaleType="centerCrop"
                            tools:visibility="visible" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        tools:ignore="ExtraText"
                        tools:visibility="gone">

                        <TextView
                            android:id="@+id/reader"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reader:"
                            android:textSize="20dp"
                            android:visibility="invisible"
                            tools:visibility="invisible"></TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <Spinner
                                android:id="@+id/main_spinner_reader"
                                android:layout_width="83dp"
                                android:layout_height="wrap_content"></Spinner>

                            <Button
                                android:id="@+id/main_button_list"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="List"></Button>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/main_button_open2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Open"></Button>

                            <Button
                                android:id="@+id/main_button_close"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Close"></Button>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Slot:"
                            android:textSize="20dp"></TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/main_spinner_slot"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></Spinner>

                            <Button
                                android:id="@+id/main_button_get_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Get State"></Button>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Power Action:"
                            android:textSize="20dp"></TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Spinner
                                android:id="@+id/main_spinner_power"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"></Spinner>

                            <Button
                                android:id="@+id/main_button_power"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Power"></Button>

                            <Button
                                android:id="@+id/main_button_get_atr"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Get ATR"></Button>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Protocol:"
                            android:textSize="20dp"></TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <CheckBox
                                android:id="@+id/main_check_box_t0"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="T=0"></CheckBox>

                            <CheckBox
                                android:id="@+id/main_check_box_t1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="T=1"></CheckBox>
                        </LinearLayout>
                        \

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/main_button_set_protocol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Set Protocol"
                                android:textSize="10dp"></Button>

                            <Button
                                android:id="@+id/main_button_get_protocol"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Get Protocol"
                                android:textSize="10dp"></Button>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Transmit / Control:"
                            android:textSize="10dp"></TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/main_button_transmit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Transmit"></Button>

                            <Button
                                android:id="@+id/main_button_control2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Control"></Button>

                            <EditText
                                android:id="@+id/main_edit_text_control"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:inputType="number"></EditText>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Secure PIN Entry:"
                            android:textSize="20dp"></TextView>

                        <Button
                            android:id="@+id/main_button_get_features"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Get Features"></Button>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/main_button_verify_pin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Verify PIN"></Button>

                            <Button
                                android:id="@+id/main_button_modify_pin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Modify PIN"></Button>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACR8"
                            android:textSize="10dp"></TextView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/main_button_read_key"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Read Key"
                                android:textSize="5dp"></Button>

                            <Button
                                android:id="@+id/main_button_display_lcd_message"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Display LCD Message"
                                android:textSize="5dp"></Button>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/user_teeth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:background="@drawable/button_add"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/user_text"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:gravity="center"
                        android:text="테스트 테스트"
                        android:textSize="30dp"></TextView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">


                        <Button
                            android:id="@+id/main_button_control"
                            android:layout_width="1dp"
                            android:layout_height="1dp"
                            android:backgroundTint="#EAEAEA"
                            android:textSize="0dp"></Button>

                        <Button
                            android:id="@+id/enroll"
                            android:layout_width="500dp"
                            android:layout_height="50dp"
                            android:layout_margin="40dp"
                            android:background="#0692d3"
                            android:text="확인"
                            android:textColor="#FFFFFF"
                            android:textSize="30dp"></Button>

                    </LinearLayout>


                    <!--Button
                    android:id="@+id/test"
                    android:layout_width="50dp"
                    android:layout_height="100dp"
                    android:background="@color/colorPrimaryDark"
                    android:visibility="invisible"
                    android:textSize="30dp"

                    ></Button-->
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:visibility="visible">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center">

                <LinearLayout
                    android:id="@+id/nextLayBtn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="255"
                    android:background="@drawable/navy_button"
                    android:orientation="vertical"></LinearLayout>

                <Button
                    android:id="@+id/nextBtn"
                    style="@android:style/Widget.Button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0dp"
                    android:background="@drawable/navy_button"
                    android:focusable="auto"
                    android:fontFamily="@font/nanum_gothic_bold"
                    android:lineSpacingExtra="8sp"
                    android:padding="10dp"
                    android:text="@string/Confirm"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="130sp"
                    android:visibility="invisible"
                    tools:text="@string/Confirm"
                    tools:visibility="invisible" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="세정 시작"
                    android:textColor="#FFFFFF"
                    android:textSize="96sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="right|top"
                    android:text="2  "
                    android:textAlignment="viewEnd"
                    android:textColor="#FFFFFF"
                    android:textSize="96sp"
                    android:textStyle="bold"
                    android:visibility="visible" />

            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>